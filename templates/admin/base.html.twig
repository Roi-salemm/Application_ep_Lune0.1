                        <path d="M5 7h14M5 12h14M5 17h14" />
                        <circle cx="7" cy="7" r="1.2" />
                        <circle cx="9" cy="12" r="1.2" />
                        <circle cx="7" cy="17" r="1.2" />
                    </svg>
                </span>
                <span class="admin-sidebar__label">OP ms_mapping</span>
            </a>
            {# <a class="admin-sidebar__item {{ active_menu is defined and active_menu == 'ephemeris' ? 'admin-sidebar__item--active' : '' }}"
               href="{{ path('admin_moon_ephemeris_hours') }}" style="--delay: 4">
                <span class="admin-sidebar__icon" aria-hidden="true">
                    <svg viewBox="0 0 24 24" role="img">
                        <path d="M4 5h16M4 11h16M4 17h16" />
                        <circle cx="8" cy="5" r="1.5" />
