                <span class="admin-sidebar__label">Debug</span>
            </a>
        </nav>
        <div class="admin-sidebar__footer">
            <span class="admin-sidebar__pulse"></span>
            <span class="admin-sidebar__footer-text">Console admin</span>
        </div>
    </aside>

    <div class="admin-main">
        <header class="admin-header">
            <div class="admin-header__page">
                <div class="admin-header__page-title">{{ page_title|default('Administration') }}</div>
                {% if page_subtitle is defined and page_subtitle %}
                    <div class="admin-header__page-subtitle">{{ page_subtitle }}</div>
                {% endif %}
            </div>
            <div class="admin-header__user">
                <div class="admin-header__title">Administration</div>
                <div class="admin-header__meta">
                    <span class="admin-header__name">nom</span>
                    <span class="admin-header__role">role</span>
                </div>
            </div>
        </header>

        <section class="admin-content">
            <div class="admin-content__body">
                {% block admin_content %}{% endblock %}
            </div>
        </section>
