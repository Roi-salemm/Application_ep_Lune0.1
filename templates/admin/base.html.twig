            <span class="admin-sidebar__brand-text">Lune EP</span>
        </div>
        <nav class="admin-sidebar__nav" aria-label="Navigation admin">
            <a class="admin-sidebar__item {{ active_menu is defined and active_menu == 'horizon' ? 'admin-sidebar__item--active' : '' }}"
